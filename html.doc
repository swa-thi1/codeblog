<form action="action_page.php">
    <div class="container">
      <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      
      
      <label for="first-name">
      <br>First-Name</br></label>
      <input type="text" placeholder="Enter First-Name"
       name="first-name" id="first-name" required>

      <label for="last-name">
      <br>Last-Name</br></label>
      <input type="text" placeholder="Enter FLast-Name"
       name="last-name" id="last-name" required>

      <label for="email">
      <br>Email</br></label>
      <input type="text" placeholder="Enter Email" 
      name="email" id="email" required>

      <label for="date-of-birth">
      <br>Date-Of-Birth</br></label>
      <input type="date" id="DOB" placeholder="Enter Date-Of-Birth"
